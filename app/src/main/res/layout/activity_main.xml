<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.himmat.onboarding_project.MainActivity">

<android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/slider_viewpager"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
</android.support.v4.view.ViewPager>

   <LinearLayout
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:orientation="horizontal"
       android:id="@+id/mlayout"
       android:layout_marginTop="30dp"
       android:layout_below="@+id/slider_viewpager"
       android:layout_centerHorizontal="true">
   </LinearLayout>

    <Button
        android:id="@+id/mbackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mlayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textColor="#FFFFFF"
        android:background="#0d0e"
        android:text="Back" />

    <Button
        android:id="@+id/mnextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
       android:background="#0d0e"
        android:textColor="#FFFFFF"
        android:text="Next"
        android:layout_alignTop="@+id/mlayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
